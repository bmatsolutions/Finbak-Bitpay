<table style="width:80%" align="center">
    <tr>
        <td></td>
        <td></td>
        <td></td>
        <td>
            <div style="text-align:right;"><img class="logo" src="~/images/payway.png" alt=".." /> </div>
        </td>
    </tr>
    <tr>
        <td></td>
        <td><div style="text-align:center;"><h4 style="font:bold;">Cash Power Receipt</h4></div></td>
        <td></td>
    </tr>
</table>
<table style="width:80%;font-size:12px" align="center">
    <tr>
        <td style="text-align:left;">
            <table style="width:100%;">
                <tr>
                    <td><strong>Date:</strong> @Model.ReceiptDate.ToString("dd/MM/yyyy hh:mm tt")</td>
                    <td><strong>Receipt No:</strong> @Model.ReceiptNo</td>
                </tr>
            </table>
        </td>
    </tr>


    <tr>
        <td>

            <table class="table  table-striped">
                <tr class="text-nowrap">
                    <td>
                        <strong> Customer Name: </strong> @Model.CustomerName </br>
                        @Model.AccountDebit
                    </td>
                    <td></td>
                    <td></td>
                    <td>
                        <strong>Meter No:</strong> @Model.MeterNo
                    </td>
                </tr>
                <tr class="text-nowrap">
                    <td>
                        <strong>Token:</strong> @Model.TokenValue
                    </td>
                    <td>
                        <strong>Amount Paid(BIF):</strong>  @Model.ReceivedAmount.ToString("#,##0.00")
                    </td>
                    <td>
                        <strong>Amount Paid:</strong>  @Model.AmountWords
                    </td>
                    <td>
                        <strong>Payment Received From:</strong>  @Model.ReceivedFrom
                    </td>
                </tr>
                <tr class="text-nowrap">
                    <td>
                        <strong>Amount Accepted(BIF):</strong>  @Model.AcceptedAmount.ToString("#,##0.00")
                    </td>
                    <td>
                        <strong>Amount Reimbursed(BIF):</strong>  @Model.ReimbursementAmount.ToString("#,##0.00")
                    </td>
                    <td>
                        <strong>Token Pricing(BIF):</strong>  @Model.KWh
                    </td>
                    <td>
                        <strong>Units Purchased:</strong>  @Model.UnitsPurchased
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <tr></tr>
    <tr>
        <table class="table table-striped" style="width:80%; font-size:12px" align="center">
            <tr>
                <td><strong>Moyen de paiement</strong></td>
                <td><strong> Référence </strong></td>
                <td><strong>Banque </strong></td>
                <td><strong>Montant payé </strong></td>
            <tr />
            <tr>
                <td>@Model.PaymentMode</td>
                <td>@Model.ReferenceNo</td>
                <td>@title</td>
                <td>@Model.ReceivedAmount</td>
            </tr>
        </table>
    </tr>
    <tr>
        <table>
            <tr>
                <td> <div style="text-align:right;">  Signature et Cachet:  </div></td>
                <td></td>
                <td><div style="text-align:right;">................................................................</div></td>
            </tr>
        </table>
    </tr>
</table>

