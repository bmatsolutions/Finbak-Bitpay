@model TopUpReportModels
@{
    Layout = "_LayoutPaywayTopUpReceipt";
}

<br />
<table style="width:80%" align="center">
    <tr>
        <td></td>
        <td></td>
        <td></td>
        <td>
            <div style="text-align:right;"><img class="logo" src="~/images/payway.png" alt=".." /> </div>
        </td>
    </tr>
    <tr>
        <td></td>
        <td><div style="text-align:center;"><h4 style="font:bold;">Retailer Top-Up Receipt</h4></div></td>
        <td></td>
    </tr>


</table>
<table style="width:80%;font-size:12px" align="center">
    <tr>
        <td style="text-align:left;">
            <table style="width:100%;">
                <tr>
                    <td><strong>Date:</strong> @Model.ReceiptDate.ToString("dd/MM/yyyy hh:mm tt")</td>
                    <td><strong>Receipt No:</strong> @Model.ReceiptNo</td>
                </tr>
            </table>
        </td>
    </tr>


    <tr>
        <td>

            <table class="table table-striped">
                <tr>
                    <td>
                        <strong>Retailer Code: </strong> @Model.CustomerNo
                    </td>
                </tr>
                <tr>
                    <td>
                        <table style="width:100%;">
                            <tr>
                                <td><strong>Customer Name: </strong> @Model.RetailerName </td>
                                <td>@Model.AccountDebit</td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td>
                        <table style="width:100%;">
                            <tr>
                                <td><strong>Location:</strong> @Model.BranchName</td>
                                <td>  <strong>Payment Received From:</strong>  @Model.ReceivedFrom</td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td>
                        <table style="width:100%;">
                            <tr>
                                <td><strong>Amount Paid:</strong> @Model.AmountWords</td>
                                <td>  <strong>Amount Paid(BIF):</strong>  @Model.Amount.ToString("#,##0.00")</td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
<table class="table table-striped" style="width:80%;font-size:12px" align="center">
    <tr>
        <td><strong>Moyen de paiement</strong></td>
        <td><strong> Référence </strong></td>
        <td><strong>Banque </strong></td>
        <td><strong>Montant payé </strong></td>
    <tr />
    <tr>
        <td>@Model.PaymentMode</td>
        <td>@Model.BankRef</td>
        <td>Finbank SA</td>
        <td>@Model.Amount</td>
    </tr>
</table>
