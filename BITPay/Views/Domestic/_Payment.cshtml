@model DomesticTaxPayment
@{
    var payModes = Model.PaymentModes as List<SelectListItem>;
    var banks = ViewData["Bank"] as List<SelectListItem>;
    Layout = null;

}

<a href="javascript:confirmation()">Confirmation</a><br />

<p class="text-muted">
    Enter the payment details in the form below and click on Finish button
</p>
<div class="row">
    <div class="col-md-6">
        @if (!string.IsNullOrEmpty(Model.CustomerName))
        {
            <div class="form-group">
                <div class="col-md-4">Customer Name</div>
                <div class="col-md-8">
                    <strong>@Model.CustomerName</strong>
                </div>
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.DriverName))
        {
            <div class="form-group">
                <div class="col-md-4">Driver Name</div>
                <div class="col-md-8">
                    <strong>@Model.DriverName</strong>
                </div>
            </div>
        }

        <div class="form-group">
            <div class="col-md-4">Tax Amount</div>
            <div class="col-md-8">
                <span class="label label-inverse font-bold">@Model.TaxAmount.ToString("#,##0.00")</span>
            </div>
        </div>
    </div>
</div>
<br/>
 <div class="row">
    <div class="col-md-6">
        <form asp-action="makedomesticpayment" id="payForm" method="post" class="form-horizontal" role="form">
            <div class="form-group">
                <div class="col-md-12">
                    <div asp-validation-summary="ModelOnly"></div>
                    <input asp-for="Period" type="hidden" />
                    <input asp-for="DomesticTaxType" type="hidden" />
                    <input asp-for="DomesticTaxName" type="hidden" />
                    <input asp-for="Vehicle" type="hidden" />
                    <input asp-for="Contracavation" type="hidden" />
                    <input asp-for="DriverName" type="hidden" />
                    <input asp-for="Word" type="hidden" />
                    <input asp-for="Service" type="hidden" />
                    <input asp-for="LicenceType" type="hidden" />
                    <input asp-for="CarOnwer" type="hidden" />
                    <input asp-for="Chasis" type="hidden" />
                    <input asp-for="Imma" type="hidden" />
                    <input asp-for="Document" type="hidden" />
                    <input asp-for="Education" type="hidden" />
                    <input asp-for="Copies" type="hidden" />
                    <input asp-for="Infraction" type="hidden" />
                    <input asp-for="DeclNo" type="hidden" />
                    <input asp-for="commune" type="hidden" />
                    <input asp-for="FileCode" type="hidden" />
                    <input asp-for="tin" type="hidden" />
                    <input asp-for="TaxAmount" type="hidden" />
                    <input asp-for="CustomerName" type="hidden" />
                    <input asp-for="Product" type="hidden" />
                    <input asp-for="CNI" type="hidden" />
                    <input asp-for="CNIIssue" type="hidden" />
                    <input asp-for="ManufactureYear" type="hidden" />
                    <input asp-for="BrandType" type="hidden" />
                    <input type="hidden" asp-for="Delay" />
                    <input type="hidden" asp-for="adjustment" />
                    <input type="hidden" asp-for="PostToCBS" />
                    <input type="hidden" asp-for="CNI" />
                    <input type="hidden" asp-for="CNIIssue" />
                    <input id="tax_step" type="hidden" value="1" />
                    <input id="twende" type="hidden" value="1" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PayMode" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <select id="pay_mode" asp-for="PayMode" class="form-control" asp-items="@payModes"></select>
                    <span asp-validation-for="PayMode" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ChargeAmount" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="ChargeAmount"  readonly="readonly" style="outline: none; border:none;" />
                </div>
            </div>
            <div class="form-group" id="account_no">
                <label asp-for="AccountNo" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="AccountNo" class="form-control" />
                    <span asp-validation-for="AccountNo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group" id="cheque_no">
                <label asp-for="ChequeNo" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="ChequeNo" class="form-control" />
                    <span asp-validation-for="ChequeNo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group" id="sort_code">
                <label asp-for="SortCode" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <select id="banks" asp-for="SortCode" class="form-control"></select>
                    <span asp-validation-for="SortCode" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <input placeholder="0.00" asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ReceivedFrom" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="ReceivedFrom" class="form-control" />
                    <span asp-validation-for="ReceivedFrom" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Remarks" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <textarea asp-for="Remarks" class="form-control"></textarea>
                    <span asp-validation-for="Remarks" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="NoCharge" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="NoCharge" id="chargeAmout" />
                    <span asp-validation-for="NoCharge" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group">
                <label asp-for="PrintReceipt" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="PrintReceipt" />
                    <span asp-validation-for="PrintReceipt" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-4 col-md-8">
                    (<span class="text-danger">*</span>) Mandatory
                </div>
            </div>
        </form>
    </div>
  </div>







