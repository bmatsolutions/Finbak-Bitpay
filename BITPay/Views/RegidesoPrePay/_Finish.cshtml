@model PrePaidModel

<div class="row">
    <div class="col-md-6">
        <div class="alert alert-success text-center">
            <i class="fa fa-check fa-5x"></i><br />
            <h2 class="text-success">Successful.</h2>
            <strong>@Model.Msg</strong>
        </div>

        <div class="row">
            <div class="col-md-4">Meter No:</div>
            <div class="col-md-8 control-label">
                <strong>@Model.Meter_No</strong>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">Phone No:</div>
            <div class="col-md-8 control-label">
                <strong>@Model.PhoneNo</strong>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">Amount:</div>
            <div class="col-md-8 control-label">
                <strong>@Model.Amnt</strong>
            </div>
        </div>
        
        @if (!Model.NeedApproval)
        {
            <div class="row">
                <div class="col-md-4">Token:</div>
                <div class="col-md-8 control-label">
                    <strong>@Model.Token3</strong>
                </div>
            </div>
        }
        <div class="row">
            <div class="col-md-4">Units:</div>
            <div class="col-md-8 control-label">
                <strong>@Model.units</strong>
            </div>
        </div>
        @if (!Model.NeedApproval)
        {
            <div class="text-center text-muted ">
                <span>Click on the button below to view transaction receipt</span><br />
                <a asp-action="generate"
               asp-controller="newreport"
               asp-route-reportCode="54"
               asp-route-filter1="@Model.BillCode"><i class="fa fa-print"></i>Print Receipt</a>
                </div>
        }
    </div>
    <div class="col-md-6">
        @if (Model.NeedApproval == true)
        {
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3><i class="fa fa-spin fa-spinner m-r-5"></i> <strong>Loading..............</strong></h3>
                    <button class="btn btn-success" id="paymentStatus" value="@Model.BillCode">
                        <i class="fa fa-refresh" aria-hidden="true"></i> Refresh
                    </button>

                </div>
            </div>
        }
    </div>
</div>
<input id="twende" type="hidden" value="1" />
