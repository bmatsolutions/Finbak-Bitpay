@model IEnumerable<ReportFilterItemModel>

@foreach (var item in Model)
{
    <div class="form-group row">
        <label for="@item.ValName" class="col-md-4 control-label">@item.FilterName</label>
        <div class="col-md-8">
            @if (item.FilterType == 0)
            {
                <input type="text" name="@item.ValName" class="form-control" value="@item.ValDefault" placeholder="@item.ValPrompt" />
            }
            else if (item.FilterType == 1)
            {
                <div class="input-group dtp">
                    <input name="@item.ValName" type="text" class="form-control" aria-describedby="drp-icon-@item.ValName">
                    <span class="input-group-addon" id="drp-icon"><i class="fa fa-calendar"></i></span>
                </div>
            }
            else if (item.FilterType == 2)
            {

            }
        </div>
    </div>
}
<div class="form-group row">
    <div class="col-sm-offset-4 col-sm-8">
        <button name="typ" type="submit" class="btn btn-primary" value="0"><i class="fa fa-file-pdf-o"></i> Create PDF</button>
        <button name="typ" type="submit" class="btn btn-success" value="1"><i class="fa fa-file-excel-o"></i> Create Excel </button>
    </div>
</div>