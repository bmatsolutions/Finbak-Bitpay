
@{
    ViewData["Title"] = "Pay";

}

<h2 class="header-title">Make Tax Payment</h2>
<div id="mywizard">
    <h3>Make Payment</h3>
    <section id="paymentContent" data-mode="async" data-url="@Url.Action("_mPayment")"></section>
    <h3>Confirm</h3>
    <section>
        <div id="confirmContent">
            <h3><i class="fa fa-spin fa-spinner m-r-5"></i> <strong>Please wait........</strong></h3>
        </div>
    </section>
    <h3>Finish</h3>
    <section>
        <div id="finishContent">
            <h3><i class="fa fa-spin fa-spinner m-r-5"></i> <strong>Please wait........</strong></h3>
        </div>
    </section>
</div>

