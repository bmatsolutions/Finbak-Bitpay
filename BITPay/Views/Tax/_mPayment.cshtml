@model TaxPaymentModel
@{
    var payModes = Model.PaymentModes as List<SelectListItem>;
    var banks = ViewData["Bank"] as List<SelectListItem>;
    Layout = null;
}
<div id="taxPayContent">
    <p class="text-muted">
        Enter the payment details in the form below and click on Finish button
    </p>
    <div class="row">
        <div class="col-md-6">
            
            <div class="row">
                <div class="col-md-4">Declarant Name</div>
                <div class="col-md-8 control-label">
                    <strong>@Model.DclntName</strong>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">Company Name</div>
                <div class="col-md-8">
                    <strong>@Model.CompanyName</strong>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">Tax Amount</div>
                <div class="col-md-8">
                    <span class="label label-inverse font-bold">@Model.ExpectedAmount.ToString("#,##0.00")</span>
                </div>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="MakePayment" id="payForm" method="post" class="form-horizontal" role="form">
                <div class="form-group">
                    <div class="col-md-12">
                        <div asp-validation-summary="ModelOnly"></div>
                        <input type="hidden" asp-for="PayType" />
                        <input type="hidden" asp-for="AccountHolder" />
                        <input asp-for="FileCode" type="hidden" />
                        <input asp-for="DclntName" type="hidden" />
                        <input asp-for="CompanyName" type="hidden" />
                        <input asp-for="ExpectedAmount" type="hidden" />
                        <input asp-for="ChargeAmount" type="hidden" />
                        <input asp-for="Mode" type="hidden" />
                        <input asp-for="PostToCBS" type="hidden" />

                        <input id="twende" type="hidden" value="1" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="PayMode" class="col-md-4 control-label"></label>
                    <div class="col-md-8">
                        <select id="pay_mode" asp-for="PayMode" class="form-control" asp-items="@payModes"></select>
                        <span asp-validation-for="PayMode" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ChargeAmount" class="col-md-4 control-label"></label>
                    <div class="col-md-8">
                        <input asp-for="ChargeAmount" id="chargeVal" readonly="readonly" style="outline: none; border:none;" />
                    </div>
                </div>
                <div class="form-group" id="account_no">
                    <label asp-for="AccountNo" class="col-md-4 control-label"></label>
                    <div class="col-md-8">
                        <input asp-for="AccountNo" class="form-control" />
                        <span asp-validation-for="AccountNo" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group" id="cheque_no">
                    <label asp-for="ChequeNo" class="col-md-4 control-label"></label>
                    <div class="col-md-8">
                        <input asp-for="ChequeNo" class="form-control" />
                        <span asp-validation-for="ChequeNo" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group" id="sort_code">
                    <label asp-for="SortCode" class="col-md-4 control-label"></label>
                    <div class="col-md-8">
                        <select id="banks" asp-for="SortCode" class="form-control"></select>
                        <span asp-validation-for="SortCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Amount" class="col-md-4 control-label"></label>
                    <div class="col-md-8">
                        <input asp-for="Amount" class="form-control" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ReceivedFrom" class="col-md-4 control-label"></label>
                    <div class="col-md-8">
                        <input asp-for="ReceivedFrom" class="form-control" />
                        <span asp-validation-for="ReceivedFrom" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Remarks" class="col-md-4 control-label"></label>
                    <div class="col-md-8">
                        <textarea asp-for="Remarks" class="form-control"></textarea>
                        <span asp-validation-for="Remarks" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="NoCharge" class="col-md-4 control-label"></label>
                    <div class="col-md-8">
                        <input asp-for="NoCharge" id="chargeAmout" />
                        <span asp-validation-for="NoCharge" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="PrintReceipt" class="col-md-4 control-label"></label>
                    <div class="col-md-8">
                        <input asp-for="PrintReceipt" />
                        <span asp-validation-for="PrintReceipt" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8">
                        (<span class="text-danger">*</span>) Mandatory
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
    @if (Model.DclntName != "")
    {

        <script>
            listenPayModeChange();
        </script>
    }

    @section Scripts{

        @await Html.PartialAsync("_ValidationScriptsPartial")
        <script src="~/lib/jquery.steps/build/jquery.steps.min.js"></script>


    }
