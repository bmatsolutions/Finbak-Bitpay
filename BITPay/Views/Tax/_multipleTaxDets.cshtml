@model DeclarationQueryResponse


<div class="col-sm-7">
    <p class="alert alert-success text-center">
        <i class="fa fa-check-circle-o fa-2x"></i><br />
        <strong>Confirm declaration details </strong>
    </p>

    <div class="row">
        <div class="col-md-4">Declarant Name</div>
        <div class="col-md-8 control-label">
            <strong>@Model.DeclarantName</strong>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">Declarant Code</div>
        <div class="col-md-8 control-label">
            <strong>@Model.DeclarantCode</strong>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">Company Name</div>
        <div class="col-md-8">
            <strong>@Model.CompanyName</strong>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">Company Code</div>
        <div class="col-md-8">
            <strong>@Model.CompanyCode</strong>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">Office Name</div>
        <div class="col-md-8">
            <strong>@Model.OfficeName</strong>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">Office Code</div>
        <div class="col-md-8">
            <strong>@Model.OfficeCode</strong>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">Assessment Year</div>
        <div class="col-md-8">
            <strong>@Model.AssessmentYear</strong>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">Assessment Serial</div>
        <div class="col-md-8">
            <strong>@Model.AssessmentSerial</strong>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">Assessment Number</div>
        <div class="col-md-8">
            <strong>@Model.AssessmentNumber</strong>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">Tax Payer Name</div>
        <div class="col-md-8">
            <strong>@Model.TaxPayerName</strong>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">Transaction Code</div>
        <div class="col-md-8">
            <strong>@Model.TransactionCode</strong>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">Transaction Reference</div>
        <div class="col-md-8">
            <strong>@Model.TransactionRef</strong>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4"><h4>Amount</h4></div>
        <div class="col-md-8">
            <h4><span class="label label-inverse font-bold">@Model.AmountToBePaid.ToString("#,##0.00")</span></h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-8">
            <span class="text-muted">@Model.ErrorDescription</span>
        </div>
    </div>
</div>


    <form id="taxForm" method="post" asp-action="confirmdets">
        <input id="tax_step" type="hidden" value="1" />
        <input id="twende" type="hidden" value="1" />
        <input type="hidden" asp-for="PayType" />
        <input type="hidden" asp-for="OfficeCode" />
        <input type="hidden" asp-for="OfficeName" />
        <input type="hidden" asp-for="AccountHolder" />
        <input type="hidden" asp-for="AssessmentYear" />
        <input type="hidden" asp-for="AssessmentSerial" />
        <input type="hidden" asp-for="AssessmentNumber" />
        <input type="hidden" asp-for="RegistrationNumber" />
        <input type="hidden" asp-for="CompanyName" />
        <input type="hidden" asp-for="DeclarantCode" />
        <input type="hidden" asp-for="AmountToBePaid" />
        <input type="hidden" asp-for="DeclarantName" />
        <input type="hidden" asp-for="CompanyCode" />
        <input type="hidden" asp-for="RegistrationSerial" />
        <input type="hidden" asp-for="ReferenceNumber" />
        <input type="hidden" asp-for="AccountReference" />
    </form>