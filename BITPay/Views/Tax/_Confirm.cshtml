@model TaxPaymentModel

<div class="row">
    <div class="col-md-6">
        <div class="alert alert-success text-center">
            <i class="fa fa-info-circle fa-4x"></i><br />
            <h3>Confirm the tax payment details</h3>
        </div>
        @if (Model.PayType == 1 || Model.PayType == 2 || Model.PayType == 22)
        {
            <div class="row">
                <div class="col-md-4">Declarant Name</div>
                <div class="col-md-8 control-label">
                    <strong>@Model.DclntName</strong>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">Company Name</div>
                <div class="col-md-8">
                    <strong>@Model.CompanyName</strong>
                </div>
            </div>
        }
        @if (Model.PayType == 3)
        {
            <div class="row">
                <div class="col-md-4">Account Holder Name</div>
                <div class="col-md-8">
                    <strong>@Model.AccountHolder</strong>
                </div>
            </div>
        }
        @if (Model.PayType == 11 || Model.PayType == 22 || Model.PayType == 33)
        {
            <div class="row">
                <div class="col-md-4">Transaction Code</div>
                <div class="col-md-8">
                    <strong>@Model.TransactionCode</strong>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">Transaction Reference</div>
                <div class="col-md-8">
                    <strong>@Model.TransactionRef</strong>
                </div>
            </div>
        }
        @if (Model.PayType == 33)
        {
            <div class="row">
                <div class="col-md-4">Tax Payer Name</div>
                <div class="col-md-8">
                    <strong>@Model.TaxPayerName</strong>
                </div>
            </div>
        }
        <div class="row">
            <div class="col-md-4">Tax Amount</div>
            <div class="col-md-8 control-label">
                <strong>@Model.ExpectedAmount.ToString("#,##0.00")</strong>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">Charge Amount</div>
            <div class="col-md-8 control-label">
                <strong>@Model.ChargeAmount.ToString("#,##0.00")</strong>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4"><h4>Amount Paid</h4></div>
            <div class="col-md-8">
                <h4>@Model.Amount.ToString("#,##0.00")</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4"><h4>Received From</h4></div>
            <div class="col-md-8">
                <h4>@Model.ReceivedFrom</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">Payment Mode</div>
            <div class="col-md-8">
                <strong>@Model.PayModeName</strong>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">Cr. Account Name</div>
            <div class="col-md-8">
                <strong>@Model.CrAccountName</strong>
            </div>
        </div>
        @if (Model.PostToCBS != 0)
        {
            @if (Model.PayMode == 1 || Model.PayMode == 2)
            {
                <div class="row">
                    <div class="col-md-4">Dr. Account No</div>
                    <div class="col-md-8">
                        <strong>@Model.AccountNo</strong>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">Dr. Account Name</div>
                    <div class="col-md-8">
                        <strong>@Model.CustAccountName</strong>
                    </div>
                </div>
            }
            @if (Model.PayMode == 2)
            {
                <div class="row">
                    <div class="col-md-4">Cheque No</div>
                    <div class="col-md-8">
                        <strong>@Model.ChequeNo</strong>
                    </div>
                </div>
            }
            @if (Model.PayMode == 3)
            {

                <div class="row">
                    <div class="col-md-4">Sort Code</div>
                    <div class="col-md-8">
                        <strong>@Model.SortCode</strong>
                    </div>
                </div>
            }

            @if (Model.PayMode == 4)
            {
                <div class="row">
                    <div class="col-md-4">Cheque No</div>
                    <div class="col-md-8">
                        <strong>@Model.ChequeNo</strong>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">Sort Code</div>
                    <div class="col-md-8">
                        <strong>@Model.SortCode</strong>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="row">
                <div class="col-md-4">CBS Reference</div>
                <div class="col-md-8">
                    <strong>@Model.CBSRef</strong>
                </div>
            </div>
        }
        <div class="row">
            <div class="col-md-4">Remarks</div>
            <div class="col-md-8">
                <strong>@Model.Remarks</strong>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">Waive Charge</div>
            <div class="col-md-8">
                <strong>@Model.NoCharge</strong>
            </div>
        </div>

    </div>
</div>

<form id="confirmForm" method="post" asp-action="confirmpayment">
    <input id="twende" type="hidden" value="1" />
    <input type="hidden" asp-for="FileCode" />
    <input type="hidden" asp-for="NoCharge" />
    <input type="hidden" asp-for="PayMode" />
    <input type="hidden" asp-for="PrintReceipt" />
    <input type="hidden" asp-for="Remarks" />
    <input type="hidden" asp-for="AccountNo" />
    <input type="hidden" asp-for="Amount" />
    <input type="hidden" asp-for="ChequeNo" />
    <input type="hidden" asp-for="SortCode" />
    <input type="hidden" asp-for="ReceivedFrom" />
    <input type="hidden" asp-for="Mode" />
    <input type="hidden" asp-for="CBSRef"/>
    <input type="hidden" asp-for="PostToCBS"/>
</form>