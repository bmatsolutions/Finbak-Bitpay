@model IEnumerable<DeclarationQueryResponse>
@{
    Layout = null;
}

<div class="card-box">
    <div class="row">
        <div class="text-muted col-md-10">List of payments</div>
    </div>
    <div class="table-responsive m-t-10">
        <table class="table table-condensed table-sm table-striped table-hover table-bordered table-responsive" id="tblData">
            <thead>
                <tr>
                    <td>Declarant Code</td>
                    <td>Declarant Name</td>
                    <td>Company Code</td>
                    <td>Company Name</td>
                    <td>Taxpayer Name</td>
                    <td>Txn Code</td>
                    <td>Currency</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.DeclarantCode</td>
                    <td>@item.DeclarantName</td>
                    <td>@item.CompanyCode</td>
                    <td>@item.CompanyName</td>
                    <td>@item.TaxPayerName</td>
                    <td>@item.TransactionCode</td>
                    <td>@item.Currency</td>
                    <td><a asp-action="RemoveTempDecl" asp-route-code="@item.declCode" class="text-right text-danger remove-decla" ><i class="fa fa-trash"></i> Remove</a></td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
