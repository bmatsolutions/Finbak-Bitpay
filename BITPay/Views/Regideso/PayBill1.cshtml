@model RegidesoModel
<h2 class="header-title">Query Bills</h2>
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Search for Bill To Pay
            </div>
            <div class="panel-body">
                <small class="text-muted">
                    Enter the account Number in the form below and click on Get button
                </small>
                <form asp-action="QueryBills" id="frmQuey" method="get" class="form-horizontal validate-form" role="form">
                     <div class="form-group">
                         <label asp-for="Accnt_no" class="col-md-5 control-label"></label>
                        <div class="col-md-7">
                            <input id="acc" asp-for="Accnt_no" class="form-control" />
