@model PostPayReportModels
@{
    ViewData["Title"] = "DomesticTaxManage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="header-title">Resend Transaction</h2>
<a asp-action="FailedPayBill"><i class="fa fa-long-arrow-left"></i> Go back</a>
<div class="row">
    <div class="col-md-7">
        <div class="card-box">
            <div class="text-muted">Payment details:</div>
            <hr />
            <div class="row">
                <div class="col-md-3">Customer Name.</div>
                <div class="col-md-9 control-label">
                    <strong>@Model.ClientName</strong>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">Invoice No.</div>
                <div class="col-md-9 control-label">
                    <strong>@Model.InvoiceNo</strong>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    Amount:
                </div>
                <div class="col-md-9">
                    <span class="label label-inverse font-600"><strong>@Model.Amount.ToString("#,##0.00")</strong></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    Phone No.:
                </div>
                <div class="col-md-9">
                    <strong>@Model.PhoneNo</strong>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    Pay Mode:
                </div>
                <div class="col-md-9">
                    <strong>@Model.PayModeName</strong>
                </div>
            </div>
             @if (Model.PayMode == "1" || Model.PayMode == "2")
            {
                <div class="row">
                    <div class="col-md-3">Account no.</div>
                    <div class="col-md-9">
                        <strong>@Model.DRAccount</strong>
                    </div>
                </div>
            }
            @if (Model.PayMode == "2")
            {
                <div class="row">
                    <div class="col-md-3">Cheque no.</div>
                    <div class="col-md-9">
                        <strong>@Model.ChequeNo</strong>
                    </div>
                </div>
            }
            @if (Model.PayMode == "3")
            {
                <div class="row">
                    <div class="col-md-3">Cheque no.</div>
                    <div class="col-md-9">
                        <strong>@Model.ChequeNo</strong>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">SortCode</div>
                    <div class="col-md-9">
                        <strong>@Model.SortCode</strong>
                    </div>
                </div>
            }

            @if (Model.PayMode == "4")
            {
                <div class="row">
                    <div class="col-md-3">Cheque no.</div>
                    <div class="col-md-9">
                        <strong>@Model.ChequeNo</strong>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">SortCode</div>
                    <div class="col-md-9">
                        <strong>@Model.SortCode</strong>
                    </div>
                </div>
               }
            <div class="row">
                <div class="col-md-3">
                    Received From:
                </div>
                <div class="col-md-9">
                    <strong>@Model.ReceivedFrom</strong>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    Remarks:
                </div>
                <div class="col-md-9">
                    <strong>@Model.Remarks</strong>
                </div>
            </div>

            <hr />
        </div>
    </div>
    <div class="col-md-5">
        <div class="panel panel-default">
            <div class="panel-heading"><strong>Manage Actions:</strong></div>
            <div class="panel-body">
                <form asp-action="ResendPostPay">
                    <input type="hidden" name="Code" value="@Model.BillCode" />
                    <input type="hidden" name="Reason" value="" />
                    <input type="hidden" name="MyAction" value="1" />
                    <button type="submit" class="btn btn-success btn-lg rbutton"><i class="fa fa-check"></i> Resend Bill</button>
                </form>
            </div>
        </div>
    </div>
</div>

    <script type="text/javascript">
        $('.rbutton').on('click', function () {
            $(this).prop("disabled", true);
        });

    </script>


