@model QueryMarie
@{
    ViewData["Title"] = "Query Tax";
    var taxTypes = new List<SelectListItem>();
    taxTypes.Add(new SelectListItem { Value = "1", Text = "TAX NOTE" });
    taxTypes.Add(new SelectListItem { Value = "2", Text = "TAX NOTICE" });
}

<h2 class="header-title">Query Tax</h2>
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Search for Miarie tax note/notice
            </div>
            <div class="panel-body">
                <small class="text-muted">
                    Enter the miarie tax details in the form below and click on Get button
                </small>
                <form asp-action="gettax" id="frmQuey" method="get" class="form-horizontal validate-form" role="form">
                    <div class="form-group">
                        <div class="col-md-12">
                            <div asp-validation-summary="ModelOnly"></div>
                            <input id="tax_step" type="hidden" value="0" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="TaxType" class="col-md-5 control-label"></label>
                        <div class="col-md-7">
                            <select asp-for="TaxType" class="form-control" asp-items="@taxTypes"></select>
                            <span asp-validation-for="TaxType" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="RefNo" class="col-md-5 control-label"></label>
                        <div class="col-md-7">
                            <input asp-for="RefNo" class="form-control" />
                            <span asp-validation-for="RefNo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-5 col-md-7">
                            (<span class="text-danger">*</span>) Mandatory
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-5 col-md-7">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i> Get</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Search results:
            </div>
            <div class="panel-body">
                <div id="queryResult">
                    <p class="text-center">
                        <i class="fa fa-book fa-3x"></i><br />
                        Query results will be displayed here.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
<script>
    $(document).ready(function () {
        $('#frmQuey').on('submit', function (e) {
            e.preventDefault();
            $('#queryResult').html('<p class="text-center"><i class="fa fa-spin fa-spinner fa-3x"></i><br/>Querying.........</p>');
            var frm = $(this);
            var url = frm.attr("action");
            var formData = frm.serialize();
            $.get(url, formData, function (data) {
                $('#queryResult').html(data);
            })
        })
    });
</script>
}