@model IEnumerable<MiariePaymentModel>
@{
    ViewData["Title"] = "Failed  Mairie Payments";
}

<h2 class="header-title">Failed  Mairie Payments</h2>
<div class="card-box">
    <p class="text-muted">You can filter the records to view by selecting the below options</p>
    <form method="get" asp-action="failed">
        <div class="row">
            <div class="col-md-4">
                <div>Date Range:</div>
                <div class="input-group drp">
                    <input name="dateRange" type="text" class="form-control" aria-describedby="drp-icon">
                    <span class="input-group-addon" id="drp-icon"><i class="fa fa-calendar"></i></span>
                </div>
            </div>
            <div class="col-md-2">
                <div>.</div>
                <button class="btn btn-default"><i class="fa fa-search"></i> Get</button>
            </div>
        </div>
    </form>
    <div class="table-responsive m-t-10">
        <table class="table table-striped table-hover table-bordered table-responsive-md" id="tblData">
            <thead>
                <tr>
                    <td>Tax Ref</td>
                    <td>Taxpayer Name</td>
                    <td>Type</td>
                    <td>Pay Date</td>
                    <td>Pay Mode</td>
                    <td>Amount</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TaxNoteNo</td>
                        <td>@item.TaxPayerName</td>
                        <td>@item.TypeName</td>
                        <td>@item.PayDate</td>
                        <td>@item.PayModeName</td>
                        <td>@item.Amount.ToString("#,##0.00")</td>
                        <td>
                            <a asp-action="repost"
                               asp-route-code="@item.FileCode" class="repost-txn"><i class="fa fa-upload"></i> Re-post</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section css{
    <link href="~/css/mydatatable.min.css" rel="stylesheet" />
    <link href="~/css/daterangepicker.css" rel="stylesheet" />
    <link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/js/mydatatable.min.js"></script>
    <script src="~/js/daterangepicker.min.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/js/dialog.js"></script>
    <script>
        $(function () {
            $('#tblData').dataTable();

            $('.repost-txn').click(function (e) {
                e.preventDefault();

                var url = $(this).attr('href');
                showConfirmMessage('Re-Post Payment', 'Are you sure you want to RE-POST this payment?', function () {
                    showProgress();
                    $.get(url, function () { location.reload(); })
                })

            });

            var start = moment().add(-7, "days");
            var end = moment();

            function cb(start, end) {
                $('.drp input').val(start.format('D MMM YYYY') + ' - ' + end.format('D MMM YYYY'));
            }

            $('.drp').daterangepicker({
                startDate: start,
                endDate: end,
                ranges: {
                    'Today': [moment(), moment()],
                    'Yesterday': [moment().subtract(1, 'days'), moment().subtract(1, 'days')],
                    'Last 7 Days': [moment().subtract(6, 'days'), moment()],
                    'Last 30 Days': [moment().subtract(29, 'days'), moment()],
                    'This Month': [moment().startOf('month'), moment().endOf('month')],
                    'Last Month': [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')]
                }
            }, cb);
            cb(start, end);
        });
    </script>
}


