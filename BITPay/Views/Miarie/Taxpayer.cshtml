@model MairieTaxpayerQueryModel
@{
    ViewData["Title"] = "Query Taxpayer";
}
<h2 class="header-title">Query Taxpayer</h2>
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Query/verify taxpayer details
            </div>
            <div class="panel-body">
                <p class="text-muted">
                    Enter the taxpayer details in the form below and click on Get button
                </p>
                <form asp-action="gettaxpayer" id="frmQuey" method="get" class="form-horizontal validate-form" role="form">
                    <div class="form-group">
                        <label asp-for="TaxpayerId" class="col-md-4 control-label"></label>
                        <div class="col-md-8">
                            <input asp-for="TaxpayerId" class="form-control" />
                            <span asp-validation-for="TaxpayerId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-8">
                            (<span class="text-danger">*</span>) Mandatory
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-8">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i> Get</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Quey results:
            </div>
            <div class="panel-body">
                <div id="queryResult">
                    <p class="text-center">
                        <i class="fa fa-book fa-3x"></i><br />
                        Query results will be displayed here.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
    $(document).ready(function () {
        $('#frmQuey').on('submit', function (e) {
            e.preventDefault();
            $('#queryResult').html('<p class="text-center"><i class="fa fa-spin fa-spinner fa-3x"></i><br/>Querying.........</p>');
            var frm = $(this);
            var url = frm.attr("action");
            var formData = frm.serialize();
            $.get(url, formData, function (data) {
                $('#queryResult').html(data);
            })
        })
    });
    </script>
}
