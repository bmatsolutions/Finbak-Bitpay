@model IEnumerable<PaymentMode>
@{
    ViewData["Title"] = "Payment Modes";
}

<h2 class="header-title">Payment Modes</h2>
<div class="row">
    <div class="col-md-8">
        <div class="card-box">
            <div class="text-muted">List of currently configured modes of payments.</div>
            <div class="table-responsive m-t-10">
                @*@(Html.Grid(Model).Build(cols =>
                {
                    cols.Add(m => m.ModeCode).Titled("Code");
                    cols.Add(m => m.ModeName).Titled("Mode Name");
                    cols.Add(m => m.GL_Account).Titled("GL Account");
                    cols.Add(m => m.Approval).Titled("Require Approval");
                    cols.Add(m => m.Charge).Titled("Charge").Formatted("{0:#,##0.00}");
                    cols.Add().Encoded(false).RenderedAs(m => $"<a href=\"#\" class=''><i class='fa fa-cogs'></i> Manage</a>");
                }).Pageable()
                        .Empty("No data to display!")
                        .Css("table-striped table-hover")
                )*@
                <table class="table table-striped table-hover table-bordered table-responsive-md" id="tblData">
                    <thead>
                        <tr>
                            <td>Code</td>
                            <td>Mode Name</td>
                            <td>GL Account</td>
                            <td>Require Approval</td>
                            <td>Charge</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ModeCode</td>
                                <td>@item.ModeName</td>
                                <td>@item.GL_Account</td>
                                <td>@item.Approval</td>
                                <td>@item.Charge.ToString("#,##0.00")</td>
                                <td><a href="#" class="text-right"><i class="fa fa-cogs"></i> Manage</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section css{
    <link href="~/css/mydatatable.min.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/js/mydatatable.min.js"></script>
    <script>
        $(function () {
            $('#tblData').dataTable();
        });
    </script>
}