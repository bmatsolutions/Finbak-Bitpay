@model Branch
@{
    ViewData["Title"] = "Branch";
}

<h2 class="header-title">Branch</h2>
<div class="row">
    <div class="col-md-6">
        <div class="card-box">
            <div class="text-muted">
                Enter branch details in the form below and then click on <b>Submit</b> button
            </div>
            <div class="row">
                <div class="col-md-11">
                    <form asp-action="branch" method="post" class="form-horizontal" role="form">
                        <div class="form-group">
                            <div class="col-md-12">
                                <div asp-validation-summary="ModelOnly"></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="BranchName" class="col-md-4 control-label"></label>
                            <div class="col-md-8">
                                <input asp-for="BranchName" class="form-control" />
                                <span asp-validation-for="BranchName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="CBS_Code" class="col-md-4 control-label"></label>
                            <div class="col-md-8">
                                <input asp-for="CBS_Code" class="form-control" />
                                <span asp-validation-for="CBS_Code" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Cash_GL_Account" class="col-md-4 control-label"></label>
                            <div class="col-md-8">
                                <input asp-for="Cash_GL_Account" class="form-control" />
                                <span asp-validation-for="Cash_GL_Account" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <div class="col-md-offset-4 col-md-8">
                                <button type="submit" class="btn btn-default"><i class="fa fa-check"></i> Submit</button>
                                <a asp-action="branches" class="btn btn-danger"><i class="fa fa-close"></i> Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
