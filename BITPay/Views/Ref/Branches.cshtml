@model IEnumerable<Branch>
@{
    ViewData["Title"] = "Branches";
}

<h2 class="header-title">Branches</h2>
<div class="row">
    <div class="col-md-8">
        <div class="card-box">
            <div class="row">
                <div class="text-muted col-md-10">List of current bank branches, click <strong>+ Add New</strong> to add a user</div>
                <div class="col-md-2 text-right"><a href="@Url.Action("branch")" class="btn btn-default"><i class="fa fa-plus"></i> Add New</a></div>
            </div>
            <div class="table-responsive m-t-10">
                @*@(Html.Grid(Model).Build(cols =>
                {
                    cols.Add(m => m.BranchName).Titled("Branch Name");
                    cols.Add(m => m.CBS_Code).Titled("CBS Code");
                    cols.Add(m => m.Cash_GL_Account).Titled("GL Account");
                    cols.Add().Encoded(false).RenderedAs(m => $"<a href=\"#\" class=''><i class='fa fa-cogs'></i> Manage</a>");
                }).Pageable()
                        .Empty("No data to display!")
                        .Css("table-striped table-hover")
                )*@
                <table class="table table-striped table-hover table-bordered table-responsive-md" id="tblData">
                    <thead>
                        <tr>
                            <td>Branch Name</td>
                            <td>CBS Code</td>
                            <td>GL Account</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.BranchName</td>
                                <td>@item.CBS_Code</td>
                                <td>@item.Cash_GL_Account</td>
                                <td><a href="#" class="text-right"><i class="fa fa-cogs"></i> Manage</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section css{
    <link href="~/css/mydatatable.min.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/js/mydatatable.min.js"></script>
    <script>
        $(function () {
            $('#tblData').dataTable();
        });
    </script>
}