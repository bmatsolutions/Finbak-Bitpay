                <table class="table table-striped table-hover table-bordered table-responsive-md" id="tblData">
                    <thead>
                        <tr>
                            <td>Bank Name</td>
                            <td>Bank Code</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
