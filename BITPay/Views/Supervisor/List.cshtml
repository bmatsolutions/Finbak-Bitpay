@{
    ViewData["Title"] = "Approval List";
}
<h2 class="header-title">Approval List</h2>
<div class="card-box">
    <div class="text-muted">List of Tax Payments pending authorization. Click <b>Manage</b> to take action on an item</div>
    <div class="table-responsive m-t-10">
        @*@(Html.Grid(Model).Build(cols =>
        {
            cols.Add(m => m.CreateDate).Titled("Date");
            cols.Add(m => m.DclntName).Titled("Declarant");
            cols.Add(m => m.CompanyNameMini).Titled("Company");
            cols.Add(m => m.UserName).Titled("Maker");
            cols.Add(m => m.Amount).Titled("Amount").Formatted("{0:#,##0.00}").Css("text-right");
            cols.Add().Encoded(false).RenderedAs(m => $"<a href=\"{Url.Action("manage", "supervisor", new { code = m.PaymentCode })}\" class=''><i class='fa fa-cogs'></i> Manage</a>");
        }).Pageable()
        .Empty("No data to display!")
        .Css("table-striped table-hover")
        )*@
        <table class="table table-striped table-hover table-bordered table-responsive-md" id="tblData">
            <thead>
                <tr>
                    <td>Date</td>
                    <td>Declarant</td>
                    <td>Company</td>
                    <td>Maker</td>
                    <td>Amount</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CreateDate</td>
                        <td>@item.DclntName</td>
                        <td>@item.CompanyNameMini</td>
                        <td>@item.UserName</td>
                        <td>@item.Amount.ToString("#,##0.00")</td>
                        <td><a asp-action="manage" asp-route-code="@item.PaymentCode" class="text-right"><i class="fa fa-cogs"></i> Manage</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section css{
    <link href="~/css/mydatatable.min.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/js/mydatatable.min.js"></script>
    <script>
        $(function () {
            $('#tblData').dataTable();
        });
    </script>
}


