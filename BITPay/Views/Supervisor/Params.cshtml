        <table class="table table-striped table-hover table-bordered table-responsive-md" id="tblData">
            <thead>
                <tr>
                    <td>Date</td>
                    <td>Details</td>
                    <td>Old Value</td>
                    <td>New Value</td>
                    <td>Maker</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Date</td>
                        <td>@item.Descr</td>
                        <td>@item.OldItemValue</td>
                        <td>@item.NewItemValue</td>
                        <td>@item.Maker</td>
                        <td><a asp-action="manageparams" asp-controller="supervisor" asp-route-code="@item.idxno" class="text-right"><i class="fa fa-cogs"></i> Manage</a></td>
                    </tr>
                }
            </tbody>
        </table>
