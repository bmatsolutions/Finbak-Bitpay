@model IEnumerable<ApprovalItemModel>
@{
    ViewData["Title"] = "Admin Approvals";
}

<h2 class="header-title">Admin Approvals</h2>
<div class="card-box">
    <div class="text-muted">List of Admin items pending authorization. Click <b>Manage</b> to take action on an item</div>
    <div class="table-responsive m-t-10">
        @*@(Html.Grid(Model).Build(cols =>
        {
            cols.Add(m => m.CreateDate).Titled("Date");
            cols.Add(m => m.Details).Titled("Details");
            cols.Add(m => m.Maker).Titled("Maker");
            cols.Add(m => m.ActionTypeName).Titled("Action");
            cols.Add().Encoded(false).RenderedAs(m => $"<a href=\"{Url.Action("manageitem", "supervisor", new { id = m.LogId })}\" class=''><i class='fa fa-cogs'></i> Manage</a>");
        }).Pageable()
            .Empty("No data to display!")
            .Css("table-striped table-hover")
        )*@
        <table class="table table-striped table-hover table-bordered table-responsive-md" id="tblData">
            <thead>
                <tr>
                    <td>Date</td>
                    <td>Details</td>
                    <td>Maker</td>
                    <td>Action</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CreateDate</td>
                        <td>@item.Details</td>
                        <td>@item.Maker</td>
                        <td>@item.ActionTypeName</td>
                        <td><a asp-action="manageitem" asp-route-code="@item.LogId" class="text-right"><i class="fa fa-cogs"></i> Manage</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section css{
    <link href="~/css/mydatatable.min.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/js/mydatatable.min.js"></script>
    <script>
        $(function () {
            $('#tblData').dataTable();
        });
    </script>
}

