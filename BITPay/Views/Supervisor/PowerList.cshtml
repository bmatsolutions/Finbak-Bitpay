@{
    ViewData["Title"] = "Approval List";
}
<h2 class="header-title">Approval List</h2>
<div class="card-box">
    <div class="text-muted">List of Token Purchase Payments pending authorization. Click <b>Manage</b> to take action on an item</div>
    <div class="table-responsive m-t-10">
        @*@(Html.Grid(Model).Build(cols =>
        {
            cols.Add(m => m.CreateDate).Titled("CreateDate");
            cols.Add(m => m.AccountNo).Titled("Account");
            cols.Add(m => m.ContactInfo).Titled("PhoneNumber");
            cols.Add(m => m.UserName).Titled("Maker");
            cols.Add(m => m.Amount).Titled("Amount").Formatted("{0:#,##0.00}").Css("text-right");
            cols.Add().Encoded(false).RenderedAs(m => $"<a href=\"{Url.Action("powermanage", "supervisor", new { code = m.PaymentCode })}\" class=''><i class='fa fa-cogs'></i> Manage</a>");
        }).Pageable()
        .Empty("No data to display!")
        .Css("table-striped table-hover")
        )*@

        <table class="table table-striped table-hover table-bordered table-responsive-md" id="tblData">
            <thead>
                <tr>
                    <td>Create Date</td>
                    <td>Account</td>
                    <td>Phone No</td>
                    <td>Maker</td>
                    <td class="text-right">Amount</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CreateDate</td>
                        <td>@item.AccountNo</td>
                        <td>@item.ContactInfo</td>
                        <td>@item.UserName</td>
                        <td class="text-right">@item.Amount.ToString("#,##0.00")</td>
                        <td><a asp-action="powermanage" asp-controller="supervisor" asp-route-code="@item.PaymentCode" class="text-right"><i class="fa fa-cogs"></i> Manage</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section css{
    <link href="~/css/mydatatable.min.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/js/mydatatable.min.js"></script>
    <script>
        $(function () {
            $('#tblData').dataTable();
        })
    </script>
}


