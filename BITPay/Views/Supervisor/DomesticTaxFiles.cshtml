
@model IEnumerable<DomesticTaxPayment>
@{
    ViewData["Title"] = "DomesticTaxFiles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="header-title">Approval List</h2>
<div class="card-box">
    <div class="text-muted">List of Tax Payments pending authorization. Click <b>Manage</b> to take action on an item</div>
    <div class="table-responsive m-t-10">
        <table class="table table-striped table-hover table-bordered table-responsive-md" id="tblData">
            <thead>
                <tr>
                    <td>Date(DD/MM/YYYY)</td>
                    <td>Payer Name</td>
                    <td>Period (MM/YYYY)</td>
                    <td>Amount</td>
                    <td>Dr Account</td>
                    <td>Cr Account</td>
                    <td>Payment Mode</td>
                    <td>Cheque No</td>
                    <td>Maker</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CreateDate.ToString("dd/MM/yyyy")</td>
                        <td>@item.ReceivedFrom</td>
                        <td>@item.Period</td>
                        <td>@item.Amount.ToString("#,##0.00")</td>
                        <td>@item.Dr_Account</td>
                        <td>@item.Cr_Account</td>
                        <td>@item.Mode</td>
                        <td>@item.ChequeNo</td>
                        <td>@item.UserName</td>
                        <td><a asp-action="DomesticTaxManage" asp-controller="supervisor" asp-route-code="@item.FileCode" class="text-right"><i class="fa fa-cog"></i> </a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="col-md-4">

    </div>
    <div class="col-md-8">

    </div>
</div>

@section css{
    <link href="~/css/mydatatable.min.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/js/mydatatable.min.js"></script>
    <script>
        $(function () {
            $('#tblData').dataTable();
        })
    </script>
}




