@model PrePaidModel
@{
    ViewData["Title"] = "DomesticTaxManage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="header-title">Approve Transaction</h2>
<a asp-action="RegidesoPrePay"><i class="fa fa-long-arrow-left"></i> Go back</a>
<div class="row">
    <div class="col-md-7">
        <div class="card-box">
            <div class="text-muted">Payment details:</div>
            <hr />
            <div class="row">
                <div class="col-md-3">Meter No.</div>
                <div class="col-md-9 control-label">
                    <strong>@Model.Meter_No</strong>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    Amount:
                </div>
                <div class="col-md-9">
                    <span class="label label-inverse font-600"><strong>@Model.Amount.ToString("#,##0.00")</strong></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    Pay Mode:
                </div>
                <div class="col-md-9">
                    <strong>@Model.PayModeName</strong>
                </div>
            </div>
            <div class="row" id="account_no">
                <div class="col-md-3">
                    Account No.:
                </div>
                <div class="col-md-9">
                    <strong>@Model.DrAccount</strong>
                </div>
            </div>

            <div class="row" id="cheque_no">
                <div class="col-md-3">
                    Cheque No.:
                </div>
                <div class="col-md-9">
                    <strong>@Model.ChequeNo</strong>
                </div>
            </div>
            <div class="row" id="sort_code">
                <div class="col-md-3">
                    Sort Code.:
                </div>
                <div class="col-md-9">
                    <strong>@Model.SortCode</strong>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    Received From:
                </div>
                <div class="col-md-9">
                    <strong>@Model.ReceivedFrom</strong>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    Remarks:
                </div>
                <div class="col-md-9">
                    <strong>@Model.Remarks</strong>
                </div>
            </div>

            <hr />
            <small>You can Approve or Reject this transaction on the right panel. If you reject you MUST enter a reason.</small>
        </div>
    </div>
    <div class="col-md-5">
        <div class="panel panel-default">
            <div class="panel-heading"><strong>Manage Actions:</strong></div>
            <div class="panel-body">
                <form asp-action="SupervisePrePay">
                    <input type="hidden" name="Code" value="@Model.BillCode" />
                    <input type="hidden" name="Reason" value="" />
                    <input type="hidden" name="MyAction" value="1" />
                    <button type="submit" class="btn btn-success btn-lg rbutton"><i class="fa fa-check"></i> Approve</button>
                </form>
                <hr />
                <form asp-action="SupervisePrePay">
                    <input type="hidden" name="Code" value="@Model.BillCode" />
                    <input type="hidden" name="MyAction" value="0" />
                    <textarea name="Reason" class="form-control" placeholder="Enter the reject reason......"></textarea>
                    <button type="submit" class="btn btn-danger m-t-10"><i class="fa fa-close"></i> Reject</button>
                </form>

            </div>
        </div>
    </div>
</div>

@section css{
    <link href="~/css/mydatatable.min.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/js/mydatatable.min.js"></script>
    <script type="text/javascript">
        $('.rbutton').on('click', function () {
            $(this).prop("disabled", true);
        });
        $(document).ready(function () {
            var mode = @Model.PayMode;
            $("#account_no").hide();
            $("#cheque_no").hide();
            $("#sort_code").hide();
            if (mode = 1) {
                $("#account_no").show();
            } else if (mode = 2) {
                $("#account_no").show();
                $("#cheque_no").show();
            } else if (mode = 3) {
                $("#cheque_no").show();
                $("#sort_code").show();
            } else if (mode = 4) {
                $("#cheque_no").show();
                $("#sort_code").show();
            }
        });

    </script>
}