@model IEnumerable<SysUserModel>
@{
    ViewData["Title"] = "System Users";
}

<h2 class="header-title">System Users</h2>
<div class="card-box">
    <div class="row">
        <div class="text-muted col-md-10">List of current system users, click <strong>+ Add New</strong> to add a user</div>
        <div class="col-md-2 text-right"><a href="@Url.Action("createuser")" class="btn btn-default"><i class="fa fa-plus"></i> Add New</a></div>
    </div>
    <div class="table-responsive m-t-10">
        @*@(Html.Grid(Model).Build(cols =>
        {
            cols.Add(m => m.UserName).Titled("Username");
            cols.Add(m => m.FullNames).Titled("Full Names");
            cols.Add(m => m.Email).Titled("E-Mail");
            cols.Add(m => m.BranchName).Titled("Branch");
            cols.Add(m => m.UserRoleName).Titled("Role");
            cols.Add(m => m.UserStatusName).Titled("Status");
            cols.Add().Encoded(false).RenderedAs(m => $"<a href=\"{Url.Action("manageuser", "security", new { code = m.UserCode })}\" class=''><i class='fa fa-cogs'></i> Manage</a>").Css("text-right");
        }).Pageable()
            .Empty("No data to display!")
            .Css("table-striped table-hover")
        )*@
        <table class="table table-striped table-hover table-bordered table-responsive-md" id="tblData">
            <thead>
                <tr>
                    <td>Username</td>
                    <td>Full Names</td>
                    <td>E-Mail</td>
                    <td>Branch</td>
                    <td>Role</td>
                    <td>Status</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.UserName</td>
                        <td>@item.FullNames</td>
                        <td>@item.Email</td>
                        <td>@item.BranchName</td>
                        <td>@item.UserRoleName</td>
                        <td>@item.UserStatusName</td>
                        <td><a asp-action="manageuser" asp-route-code="@item.UserCode" class="text-right"><i class="fa fa-cogs"></i> Manage</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section css{
    <link href="~/css/mydatatable.min.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/js/mydatatable.min.js"></script>
    <script>
        $(function () {
            $('#tblData').dataTable();
        });
    </script>
}