        <table class="table table-striped table-hover table-bordered table-responsive-md" id="tblData">
            <thead>
                <tr>
                    <td>Item Name</td>
                    <td>Item Value</td>
                    <td>Description</td>
                    <td>Params Status</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ItemName</td>
                        <td>@item.ItemValue</td>
                        <td>@item.Descr</td>
                        <td>@item.Status</td>
                        <td><a asp-action="managesettings" asp-route-code="@item.Id" class="text-right"><i class="fa fa-cogs"></i> Manage</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section css{
    <link href="~/css/mydatatable.min.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/js/mydatatable.min.js"></script>
    <script>
        $(function () {
            $('#tblData').dataTable();
        });
    </script>
}