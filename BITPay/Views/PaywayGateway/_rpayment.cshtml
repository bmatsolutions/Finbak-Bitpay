@model RetailerTopUpModel
@{
    var payModes = Model.PaymentModes as List<SelectListItem>;
    var banks = ViewData["Bank"] as List<SelectListItem>;
    Layout = null;

}

<p class="text-muted">
    Enter the payment details in the form below and click on Finish button
</p>
<div class="row">
    <div class="col-md-6">
        <form asp-action="rmakepayment" id="payForm" method="post" class="form-horizontal" role="form">
            <div class="form-group">
                <div class="col-md-12">
                    <div asp-validation-summary="ModelOnly"></div>
                    <input asp-for="TransactionId" type="hidden" />
                    <input asp-for="CustomerNumber" type="hidden" />
                    <input asp-for="CustomerNo" type="hidden" />
                    <input asp-for="ContactInfo" type="hidden" />
                    <input asp-for="PhoneNo" type="hidden" />
                    <input asp-for="Amount" type="hidden" />
                    <input asp-for="PaywayAccountName" type="hidden" />
                    <input id="tax_step" type="hidden" value="1" />
                    <input id="twende" type="hidden" value="1" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PayMode" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <select id="pay_mode" asp-for="PayMode" class="form-control" asp-items="@payModes"></select>
                    <span asp-validation-for="PayMode" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group" id="account_no">
                <label asp-for="AccountNo" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="AccountNo" class="form-control" />
                    <span asp-validation-for="AccountNo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group" id="cheque_no">
                <label asp-for="ChequeNo" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="ChequeNo" class="form-control" />
                    <span asp-validation-for="ChequeNo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group" id="sort_code">
                <label asp-for="SortCode" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <select id="banks" asp-for="SortCode" class="form-control"></select>
                    <span asp-validation-for="SortCode" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ReceivedFrom" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="ReceivedFrom" class="form-control" />
                    <span asp-validation-for="ReceivedFrom" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Remarks" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <textarea asp-for="Remarks" class="form-control"></textarea>
                    <span asp-validation-for="Remarks" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="PrintReceipt" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="PrintReceipt" />
                    <span asp-validation-for="PrintReceipt" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-4 col-md-8">
                    (<span class="text-danger">*</span>) Mandatory
                </div>
            </div>
        </form>
    </div>
</div>
