        {
            <div class="row">
                <div class="col-md-4">Cheque No</div>
                <div class="col-md-8">
                    <strong>@Model.ChequeNo</strong>
                </div>
            </div>
        }
        @if (Model.PayMode == 3)
        {

            <div class="row">
                <div class="col-md-4">Sort Code</div>
                <div class="col-md-8">
                    <strong>@Model.SortCode</strong>
                </div>
            </div>
        }

        @if (Model.PayMode == 4)
        {
            <div class="row">
                <div class="col-md-4">Cheque No</div>
                <div class="col-md-8">
                    <strong>@Model.ChequeNo</strong>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">Sort Code</div>
                <div class="col-md-8">
                    <strong>@Model.SortCode</strong>
