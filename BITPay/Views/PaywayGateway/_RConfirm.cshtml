    <input asp-for="PhoneNo" type="hidden" />
    <input type="hidden" asp-for="AccountName" />
    <input type="hidden" asp-for="NoCharge" />
    <input type="hidden" asp-for="PayMode" />
    <input type="hidden" asp-for="PrintReceipt" />
    <input type="hidden" asp-for="Remarks" />
    <input type="hidden" asp-for="AccountNo" />
    <input type="hidden" asp-for="Amount" />
    <input type="hidden" asp-for="ChequeNo" />
    <input type="hidden" asp-for="SortCode" />
    <input type="hidden" asp-for="ReceivedFrom" />
    <input type="hidden" asp-for="mode" />
</form>